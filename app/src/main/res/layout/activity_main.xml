<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logoo"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rrr">

        <RelativeLayout
        android:id="@+id/userlyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/ww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Username : "
            android:textColor="@color/dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nafil"
            android:textColor="@color/dark"
            android:layout_toEndOf="@id/ww"
            android:layout_centerVertical="true"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/datentimelyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/userlyt"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="02-12-2021"
            android:textColor="@color/dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/date"
            android:text="02:26 pm"
            android:textColor="@color/dark"
            android:textSize="20sp" />


    </RelativeLayout>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/attendance"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="Attendance"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/project"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/attendance"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="Work Entry"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>